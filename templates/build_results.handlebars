<div id="div_stdout">
    stdout: <span id="expand_messages" class="small_button"></span>
    <div id="div_messages">
        <pre>
            {{messages}}
        </pre>
    </div>
</div>

<div id="div_errors">
    {{#each errors}}
        <div class="div_diagnostic div_{{level}}">
            <span class="level_{{level}}">{{level}}</span>: <span class="err_msg">{{message}}</span>
            {{#if code}}
            <div class="err_code" {{#if code.explanation}}explain="{{code.explanation}}"{{/if}} code="{{code.code}}">{{code.code}}</div>
            {{/if}}

            {{#if spans}}
            <span class="expand_spans small_button"></span>
            <span class="div_spans">
            {{#each spans}}
                <div class="div_span">
                <span class="span_loc" link="{{file_name}}:{{line_start}}:{{line_end}}">{{file_name}}:{{line_start}}:{{column_start}}: {{line_end}}:{{column_end}}</span> <span class="span_src">TODO source text</span>
                </div>
            {{/each}}
            </span>
            {{/if}}

            {{#if children}}
            <span class="expand_children small_button"></span>
            <span class="div_children">
            {{#each children}}
                <div class="div_diagnostic_nested div_{{level}}">
                    <span class="level_{{level}}">{{level}}</span>: <span class="err_msg">{{message}}</span>

                    {{#if spans}}
                    <span class="expand_spans small_button"></span>
                    <span class="div_spans">
                    {{#each spans}}
                        <div class="div_span">
                        <span class="span_loc" link="{{file_name}}:{{line_start}}:{{line_end}}">{{file_name}}:{{line_start}}:{{column_start}}: {{line_end}}:{{column_end}}</span> <span class="span_src">TODO source text</span>
                        </div>
                    {{/each}}
                    </span>
                    {{/if}}
                </div>
            {{/each}}
            </span>
            {{/if}}
        </div>
    {{/each}}
</div>
